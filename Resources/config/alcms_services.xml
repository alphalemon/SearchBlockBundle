<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="search_block.after_deploy.class">AlphaLemon\Block\SearchBlockBundle\Core\Listener\DeployListener</parameter>
    </parameters>
    
    <services>
        <service id="search_block.after_deploy" class="%search_block.after_deploy.class%">
            <argument type="service" id="alpha_lemon_cms.block_manager_factory" />
            <tag name="alcms.event_listener" event="deploy.after_local_deploy" method="onAfterDeploy" priority="0" />
        </service>
    </services>
</container>
